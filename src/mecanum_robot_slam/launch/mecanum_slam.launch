<launch>
  <!-- Arguments -->
  <arg name="model" default="mecanum"/>
  <arg name="multi_robot_name" default=""/>
  <arg name="slam_methods" default="gmapping" doc="slam type [gmapping, cartographer, hector, karto, frontier_exploration]"/>
  <arg name="configuration_basename" default="turtlebot3_lds_2d.lua"/>
  <arg name="open_rviz" default="true"/>

  <arg name="urdf_file" default="$(find xacro)/xacro --inorder '$(find mecanum_robot_description)/urdf/mecanum_robot/mecanum.urdf.xacro'" />
  <param name="robot_description" command="$(arg urdf_file)" />

  <!-- SLAM: Gmapping, Cartographer, Hector, Karto, Frontier_exploration, RTAB-Map -->
  <include file="$(find mecanum_robot_slam)/launch/mecanum_$(arg slam_methods).launch">
    <arg name="model" value="$(arg model)"/>
    <arg name="configuration_basename" value="$(arg configuration_basename)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find mecanum_robot_slam)/rviz/mecanum_$(arg slam_methods).rviz"/>
  </group>

</launch>
